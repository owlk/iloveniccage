    package="training.com.niccage">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="training.com.niccage.NicCageApplication">

        <activity android:name=".activity.details.NicCageDetailsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.movies.NicCageMoviesActivity" />
        <activity android:name=".activity.similarmovies.SimilarMoviesActivity"></activity>
    </application>

</manifest>