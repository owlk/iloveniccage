<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="training.com.movieapp.MainActivity">

    <Button
        android:id="@+id/requestNicCageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="give me some Nic Cage!"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/requestNicCageButton"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/nicCageDataTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

    <ImageView
        android:id="@+id/nicPic"
        android:layout_width="169dp"
        android:layout_height="154dp"
        app:srcCompat="@color/colorAccent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/requestNicCageButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.506"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/requestNicCageButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/requestNicCageButton" />
</android.support.constraint.ConstraintLayout>
